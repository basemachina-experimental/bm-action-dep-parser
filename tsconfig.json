{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "erasableSyntaxOnly": true
  },
  "include": [
    "**/*.ts",
    "index.ts",
    "cli.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}